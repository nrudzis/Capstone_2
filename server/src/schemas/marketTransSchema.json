{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "User Credentials",
  "type": "object",
  "properties": {
    "username": {
      "type": "string",
      "maxLength": 20,
      "minLength": 1
    },
    "symbol": {
      "type": "string",
      "maxLength": 10,
      "minLength": 1
    },
    "orderType": {
      "type": "string",
      "enum": ["buy", "sell"]
    },
    "amount": {
      "type": "string",
      "pattern": "^(\\d+(\\.\\d+)?|\\.\\d+)$"
    }
  },
  "required": [
    "username",
    "symbol",
    "orderType",
    "amount"
  ],
  "additionalProperties": false
}
